{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "API: Launch (built JS)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/apps/api/dist/main.js",
      "cwd": "${workspaceFolder}/apps/api",
      "preLaunchTask": "npm: build",
      "outFiles": ["${workspaceFolder}/apps/api/dist/**/*.js"],
      "sourceMaps": true,
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "API: Attach (start:dev)",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/apps/api/dist/**/*.js"],
      "localRoot": "${workspaceFolder}/apps/api",
      "remoteRoot": "${workspaceFolder}/apps/api",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "API: Jest (unit)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/apps/api/node_modules/.bin/jest",
      "args": ["--runInBand", "--watchAll=false"],
      "cwd": "${workspaceFolder}/apps/api",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "API: Jest (e2e)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/apps/api/node_modules/.bin/jest",
      "args": ["--config", "./test/jest-e2e.json", "--runInBand", "--watchAll=false"],
      "cwd": "${workspaceFolder}/apps/api",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Labs: Run script (prompt)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["--workspace=@repo/labs", "run", "lab"],
      "cwd": "${workspaceFolder}",
      "args": ["${input:labScript}"],
      "envFile": "${workspaceFolder}/apps/labs/.env",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Labs: Run 01-message-basics",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["--workspace=@repo/labs", "run", "lab"],
      "cwd": "${workspaceFolder}",
      "args": ["week-1/01-message-basics"],
      "envFile": "${workspaceFolder}/apps/labs/.env",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Labs: Run 02-tokens",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
