  ],
  "inputs": [
    {
      "id": "labScript",
      "type": "promptString",
      "description": "Enter script path (e.g. 01-minimal or week-2/02-structured)",
      "default": "01-minimal"
    },
    {
      "id": "provider",
      "type": "pickString",
      "description": "Select provider for 08-abstraction",
      "options": ["openai", "claude", "gemini", "grok"],
      "default": "openai"
    }
  ]
}
